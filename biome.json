{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**",
			"test/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "warn",
				"useExhaustiveDependencies": "warn"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noEmptyBlockStatements": "warn",
				"noVar": "error"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useConst": "error",
				"useTemplate": "warn",
				"useImportType": "error",
				"useExportType": "error"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"noForEach": "off"
			},
			"performance": {
				"noDelete": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all",
			"arrowParentheses": "always"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}